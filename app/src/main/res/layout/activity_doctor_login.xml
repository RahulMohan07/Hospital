<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorLoginActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/doctor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:id="@+id/docpic"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="LOGIN"
        android:layout_below="@+id/docpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/logbutton"
        android:backgroundTint="@color/Blue"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/docpic"
        android:layout_marginTop="80dp"
        android:hint="Username"
        android:id="@+id/doclogin"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doclogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:id="@+id/docpass"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Developed by Team MediPalâ„¢"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/trademark"/>

</RelativeLayout>